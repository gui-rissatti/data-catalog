[
    {
        "id": "finance-001",
        "title": "Monthly Global Revenue",
        "description": "Consolidated revenue, expenses, and profit by region and month. Source of truth for executive reporting. Sourced from SAP and Salesforce.",
        "category": "Finance",
        "owner": "Sarah Jones (Finance Ops)",
        "layer": "Gold",
        "platform": "Databricks",
        "catalog_path": "prod_catalog.finance.revenue_monthly_agg",
        "location": "s3://corporate-datalake/gold/finance/revenue_agg",
        "tags": [
            "revenue",
            "profit",
            "executive",
            "monthly",
            "kpi"
        ],
        "schema": [
            {
                "name": "region",
                "type": "string",
                "description": "Geographic region (NA, EU, APAC)"
            },
            {
                "name": "month",
                "type": "date",
                "description": "Reporting month (YYYY-MM)"
            },
            {
                "name": "revenue",
                "type": "decimal(18,2)",
                "description": "Total revenue in USD"
            },
            {
                "name": "expenses",
                "type": "decimal(18,2)",
                "description": "Total operating expenses in USD"
            },
            {
                "name": "profit",
                "type": "decimal(18,2)",
                "description": "Net profit (Revenue - Expenses)"
            }
        ],
        "sample_query": "SELECT region, month, SUM(revenue) as total_rev \nFROM prod_catalog.finance.revenue_monthly_agg \nWHERE month >= '2023-01-01' \nGROUP BY region, month \nORDER BY month DESC;"
    },
